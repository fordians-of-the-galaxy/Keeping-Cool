<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".DavidsTips7Activity"
tools:showIn="@layout/activity_davids_tips7">

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/reptileBackground"
        android:layout_width="match_parent"
        android:layout_height="735dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/elephant"
        android:translationY="-185dp" />

</LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/circleButton1"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="145dp"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/circleButton2"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="145dp"
            android:layout_toEndOf="@+id/circleButton1"
            android:layout_toRightOf="@+id/circleButton1"
            android:background="#0086ad"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/circleButton3"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="145dp"
            android:layout_toEndOf="@+id/circleButton2"
            android:layout_toRightOf="@+id/circleButton2"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/circleButton4"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="21dp"
            android:layout_toEndOf="@+id/circleButton3"
            android:layout_toRightOf="@+id/circleButton3"
            android:background="#0086ad"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/circleButton5"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="145dp"
            android:layout_toEndOf="@+id/circleButton4"
            android:layout_toRightOf="@+id/circleButton4"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/circleButton6"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="145dp"
            android:layout_toEndOf="@+id/circleButton5"
            android:layout_toRightOf="@+id/circleButton5"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/circleButton7"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="62dp"
            android:layout_marginBottom="145dp"
            android:layout_toEndOf="@+id/circleButton6"
            android:layout_toRightOf="@+id/circleButton6"
            app:cornerRadius="100dp" />

        <ImageView
            android:id="@+id/speechBubble"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_alignBottom="@+id/circleButton4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="94dp"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/speech_bubble" />


    </RelativeLayout>

    <TextView
        android:id="@+id/quote1"
        android:layout_width="190dp"
        android:layout_height="163dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="''The question is, are we happy to suppose that our grandchildren may never be able to see an elephant except in a picture book?''\n\nDavid Attenborough"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.824" />


<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:menu="@menu/nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>